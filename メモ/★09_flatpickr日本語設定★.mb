
08_flatpickr日本語設定
\resources\js\flatpickr.js

// flatpickr日本語対応
import { Japanese } from "flatpickr/dist/l10n/ja.js"

// flatpickrの時間入力の設定を行う
const setting = {
    "locale": Japanese,
    enableTime: true,
    noCalendar: true,
    dateFormat: "H:i",
    time_24hr: true,
    minTime: "10:00",
    maxTime: "20:00",
    minuteIncrement: 30
}

// 第二引数を上で作ったsettingの変数を記述すれば
// 使用することができる
flatpickr("#start_time", setting);
flatpickr("#end_time", setting);









